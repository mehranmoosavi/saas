{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
     "types": ["jest", "@testing-library/jest-dom", "node"],
      "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts","next-auth2.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "[...nextauth]/route.js", "app/api/auth/[...nextauth].js", "app/api/auth/[...nextauth]/route.js", "middleware.js", "auth.ts", "app/dashboard/page.tsx", "next.config.js"],
  "exclude": ["node_modules"]
}
